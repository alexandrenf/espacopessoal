# ======================================
# EspacoPessoal Environment Configuration
# ======================================

# Authentication
AUTH_SECRET=your-auth-secret-here
AUTH_DISCORD_ID=your-discord-id
AUTH_DISCORD_SECRET=your-discord-secret
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Database
DATABASE_URL=your-database-url

# NextAuth URLs
NEXTAUTH_URL_DEVELOPMENT=http://localhost:3000
NEXTAUTH_URL_PRODUCTION=https://your-production-url.com
NEXTAUTH_URL=http://localhost:3000

# Email Configuration
EMAIL_SERVER=smtps://username:password@smtp.gmail.com:465
EMAIL_FROM=noreply@your-domain.com

# Firebase Configuration
FIREBASE_ADMIN_PROJECT_ID=your-firebase-project-id
FIREBASE_ADMIN_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_ADMIN_PRIVATE_KEY=your-firebase-private-key
FIREBASE_FCM_VAPID_KEY=your-firebase-vapid-key

# Deno API Configuration
DENO_API_KEY=your-deno-api-key
DENO_API_URL=http://localhost:8000

# OpenRouter API
OPENROUTER_API_KEY=your-openrouter-api-key

# Convex Configuration
NEXT_PUBLIC_CONVEX_URL=https://your-convex-url.convex.cloud

# WebSocket Configuration
# For local development, use ws://127.0.0.1:6002
# For production, use wss://your-websocket-server.com:6002
NEXT_PUBLIC_WS_URL=ws://127.0.0.1:6002

# Environment
NODE_ENV=development
